.inner
  - form_for @user_session, :url => user_session_path do |f|
    - unless @user_session.errors.empty?
      .errors
        = @user_session.errors.full_messages
    - if flash[:notice]
      .notice
        = flash[:notice]
    = f.label :openid_identifier, image_tag("octo-rails/openid-logo.png")
    %br
    = f.text_field :openid_identifier
    %br
    = f.check_box :remember_me
    = f.label :remember_me, t(:remember_me)
    %br
    %br
    = f.submit t(:sign_in)
:javascript
  document.observe('dom:loaded', function(){
    $('user_session_openid_identifier').focus()
  })

