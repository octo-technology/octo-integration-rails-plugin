.inner
  %h1
    Login
  - form_for @user_session, :url => user_session_path do |f|
    = f.error_messages
    = f.label :openid_identifier, "OpenID"
    %br
    %br
    = f.text_field :openid_identifier
    %br
    %br
    = f.check_box :remember_me
    = f.label :remember_me
    %br
    %br
    = f.submit "Login"

